<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main">
	<select id="selectMemberList" resultType="MemUserVO">
		SELECT * FROM MEMBER
	</select>
	
	<select id="selectBizList" resultType="BizUserVO">
		SELECT * FROM BIZ
	</select>

	<!-- 기업 추천  -->
	<select id="selectRecommand" resultType="BizUserVO">
		<![CDATA[
		SELECT b.COMPANY,b.FIELD,i.STOREDFILENAME,(SELECT COUNT(*) FROM REVIEW r,BIZ b WHERE b.BSMNO=r.BSMNO) a
		FROM   BIZ b,IMAGE i
   		WHERE  b.ATTACHID=i.ATTACHID
   		AND    rownum<=4 
    	ORDER by a desc
    	]]>
	</select>
	
</mapper>